// Hello HJSON in Local files!
{
  $jason:
  {
    head:
    {
      title: "{ ˃̵̑ᴥ˂̵̑}"
      actions:
      {
        $foreground:
        {
          type: $reload
        }
      }
    }
    body:
    {
      header:
      {
        style:
        {
          theme: true
        }
      }
      style:
      {
        background: "#ffffff"
        border: none
