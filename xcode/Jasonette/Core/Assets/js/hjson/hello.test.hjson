              }
            }
            {
              type: label
              style:
              {
                align: right
                padding: 10
                color: "#000000"
                font: HelveticaNeue
                size: 20
              }
              text: View documentation
              href:
              {
                url: https://jasonelle.com/docs
                view: web
                options:
                {
                  reader: true
                }
              }
            }
          ]
        }
      ]
    }
  }
}
