          }
        },
        {
          "type": "image",
          "url": "file://menu.png",
          "style": {
            "right": "23",
            "top": "43",
            "width": "24"
          },
          "action": {
            "type": "$href",
            "options": {
              "url": "file://menu.json",
              "transition": "modal"
